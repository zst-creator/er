include <iostream>int main() { 


    int num1, num2, num3;    
    std::cout << "请输入第一个数字: ";   
    std::cin >> num1;  
    std::cout << "请输入第二个数字: ";   
    std::cin >> num2;   
    std::cout << "请输入第三个数字: "; 
    std::cin >> num3;   
    int max_num = num1;    
    if (num2 > max_num) {       
    max_num = num2;    }  
    if (num3 > max_num) {       
    max_num = num3;   
}   
    std::cout << "最大的数字是: " << max_num << std::endl;  
    return 0;
}
